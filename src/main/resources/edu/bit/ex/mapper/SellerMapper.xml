	<!-- 상품 게시판 아이디 게시판 유형이 6번인거 불러오기 및 페이징-->
	<select id="getbNumDesc" resultType="edu.bit.ex.vo.BoardVO" >
		<![CDATA[
			SELECT * FROM (
			     SELECT ROWNUM AS RNUM, A.* FROM (
			        		select board_id,board_date,prdct_id from board where board_type_number = 6 order by board_id DESC
			    ) A WHERE ROWNUM <= #{pageNum} * #{amount}
